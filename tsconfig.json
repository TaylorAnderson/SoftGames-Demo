{
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "target": "es5",
    "baseUrl": "./src/",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@app/*": [
        "app/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@assets/*": [
        "assets/*"
      ]
    }
  },
  "include": [
    "src/*"
  ]
}